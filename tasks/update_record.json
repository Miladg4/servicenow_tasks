{
    "puppet_task_version": 1,
    "supports_noop": false,
    "description": "Update a ServiceNow record",
    "files": ["ruby_task_helper/files/task_helper.rb", "servicenow_tasks/lib/service_now_request.rb"],
    "remote": true,
    "parameters": {
        "table": {
            "description": "ServiceNow table",
            "type": "String[1]"
        },
        "sys_id": {
            "description": "ServiceNow sys_id",
            "type": "String[1]"
        },
        "fields": {
            "description": "ServiceNow fields to be updated. This is a hash of <field_name> => <value>",
            "type": "Hash[Any, Any, 1]"
        },
        "user": {
            "description": "ServiceNow username",
            "type": "Optional[String[1]]"
        },
        "password": {
            "description": "ServiceNow password",
            "type": "Optional[String[1]]",
            "sensitive": true
        },
        "instance": {
            "description": "ServiceNow instance name. If your instance uri is https://dev84270.service-now.com your instance name would be dev84270.",
            "type": "Optional[String[1]]"
        }
    }
}